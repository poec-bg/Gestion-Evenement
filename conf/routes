# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /index                                  Application.index
GET     /contact                                Application.contact
GET     /apropos                                Application.apropos

# Utilisateur
GET     /utilisateurList                        UtilisateurController.userList
GET     /utilisateur/{email}                    UtilisateurController.user

# Evenement
GET     /evenements                             EvenementController.eventList
GET     /evenement/{dateDebut}                  EvenementController.event

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
